<div class="$_fieldExtraClass $_colsClass" data-component="field" data-property="$field.property">
    <div class="row">
        #if ($_description)
            #set($_fieldColClass = "col-md-8")

            <div class="col-md-4 field-label text-right">
                <label for="$_domId">
                    $_description
                </label>
            </div>
        #else
            #set($_fieldColClass = "col-md-10")
        #end
        <div class="$_fieldColClass">
            <div    data-component="customFileUploader"
                    data-path="$path"
                    data-action="$action"
                    data-component="error_state"
                    data-error-property="$field.property"
            >

                <label class="field prepend-icon file">
                    <span class="button btn-primary" data-sub-component="upload_button" style="margin-right: 91px" title="Upload">
                        <i class="glyphicon glyphicon-upload"></i>
                    </span>

                    <span class="button btn-success" data-sub-component="download_button" style="margin-right: 44px" title="Scarica">
                        <i class="glyphicon glyphicon-download"></i>
                    </span>

                    <span class="button btn-danger" data-sub-component="delete_button" title="Elimina">
                        <i class="glyphicon glyphicons-delete"></i>
                    </span>

                    <input type="text" name="nome$field.property" value="#if($attachmentName) $attachmentName  #end" data-sub-component="file_name_input" readonly class="gui-input" id="$_domId" placeholder="nessun file selezionato" />

                    <label for="$_domId" class="field-icon"><i class="fa fa-upload"></i></label>

                </label>

                <div class="progress progress-bar-xxs file-upload-progress" data-sub-component="progress" style="width: 100%; margin-top: 1px">
                    <div class="progress-bar progress-bar-success" data-sub-component="progress_bar" style="width: 40%;"></div>
                </div>

                <input type="hidden" name="$field.property" value="$value" data-sub-component="upload_value"/>
            </div>

            <em
                    for="$_domId"
                    class="state-error"
                    data-component="error"
                    data-error-property="$field.property">
            </em>
        </div>
    </div>
</div>